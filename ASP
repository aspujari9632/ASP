let current = 0;
let score = 0;
let selected = null;
let timer = 3600; // seconds

function startQuiz() {
  document.querySelector("button").style.display = "none";
  document.getElementById("quiz").style.display = "block";
  showQuestion();
  setInterval(updateTimer, 1000);
}

function updateTimer() {
  if (timer <= 0) return;
  timer--;
  let minutes = Math.floor(timer / 60);
  let seconds = timer % 60;
  document.getElementById("timer").innerText = `‚è±Ô∏è Time Left: ${minutes}:${seconds.toString().padStart(2, '0')}`;
  if (timer === 0) finishQuiz();
}

function showQuestion() {
  let q = questions[current];
  document.getElementById("question").innerText = `Q${current + 1}. ${q.q}`;
  let opts = q.options.map((opt, i) =>
    `<button onclick=\"selectOption(${i})\" id='opt${i}'>${String.fromCharCode(65+i)}. ${opt}</button>`
  ).join('');
  document.getElementById("options").innerHTML = opts;
}

function selectOption(i) {
  selected = i;
  for (let j = 0; j < 5; j++) document.getElementById('opt'+j).classList.remove('selected');
  document.getElementById('opt'+i).classList.add('selected');
}

function nextQuestion() {
  if (selected !== null && selected === questions[current].answer) score++;
  selected = null;
  current++;
  if (current < questions.length) {
    showQuestion();
  } else {
    finishQuiz();
  }
}

function finishQuiz() {
  document.getElementById("quiz").style.display = "none";
  let percent = Math.round((score / questions.length) * 100);
  let message = score >= 50 ? 
    "üéâ You are doing well! ‡≤®‡≥Ä‡≤µ‡≥Å ‡≤ì‡≤°‡≥Å‡≤§‡≥ç‡≤§‡≤ø‡≤¶‡≥ç‡≤¶‡≥Ä‡≤∞‡≤ø!" :
    "üò¢ You are not studying well! ‡≤®‡≥Ä‡≤µ‡≥Å ‡≤ì‡≤¶‡≥Å‡≤§‡≥ç‡≤§‡≤ø‡≤≤‡≥ç‡≤≤!";
  document.getElementById("result").innerHTML = `Marks: ${score}/${questions.length}<br>Percentage: ${percent}%<br>${message}<br><br>‡≤ß‡≤®‡≥ç‡≤Ø‡≤µ‡≤æ‡≤¶‡≤ó‡≤≥‡≥Å / Thank You!`;
  document.getElementById("result").style.display = "block";
}
